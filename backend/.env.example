# ===========================================
# AuthentiMart Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database (Supabase PostgreSQL)
# Get this from: Supabase Dashboard > Project Settings > Database > Connection string
# Use "Transaction" mode connection string for serverless
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Application URLs
APP_NAME=AuthentiMart
APP_URL=https://authentimart.com
API_URL=https://api.authentimart.com
DEBUG=False

# bKash Payment Gateway
BKASH_APP_KEY=your-bkash-app-key
BKASH_APP_SECRET=your-bkash-app-secret
BKASH_USERNAME=your-bkash-username
BKASH_PASSWORD=your-bkash-password
BKASH_BASE_URL=https://tokenized.pay.bka.sh/v1.2.0-beta

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# Pathao Courier API
PATHAO_CLIENT_ID=your-pathao-client-id
PATHAO_CLIENT_SECRET=your-pathao-client-secret
PATHAO_BASE_URL=https://api-hermes.pathao.com

# Steadfast Courier API
STEADFAST_API_KEY=your-steadfast-api-key
STEADFAST_SECRET_KEY=your-steadfast-secret-key
STEADFAST_BASE_URL=https://portal.packzy.com/api/v1
STEADFAST_WEBHOOK_SECRET=your-steadfast-webhook-secret

# Default Courier & Automation Settings
DEFAULT_COURIER=steadfast
PAYMENT_TIMEOUT_HOURS=24
STATUS_POLL_INTERVAL_MINUTES=30
AUTO_ASSIGN_COURIER=true

# Email (SMTP) - Gmail example
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
EMAIL_FROM=noreply@authentimart.com
EMAIL_FROM_NAME=AuthentiMart

# Web Push Notifications (VAPID)
# Generate keys at: https://vapidkeys.com/
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_EMAIL=admin@authentimart.com

# Loyalty Points Configuration
DEFAULT_POINTS_PER_TAKA=0.01
DEFAULT_TAKA_PER_POINT=1.0
REFERRAL_REWARD_POINTS=100
